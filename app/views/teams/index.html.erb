<div class="container-fluid">
  <!-- START DATATABLE 1 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Jogadores
        </div>
        <div class="panel-body">
          <table id="datatable1" class="table table-striped table-hover">
            <thead>
            <tr>
              <th>Nome</th>
              <th>Treinador</th>
              <th>C. Vermelhos</th>
              <th>C. Amarelos</th>
              <th>RPA</th>
              <th>Categoria</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @teams.each do |team| %>
              <tr>
                <td><%= team.name %></td>
                <td><%= team.user.nil? ? "NÃ£o referenciado" : team.user.name %></td>
                <td><%= team.red %></td>
                <td><%= team.yellow %></td>
                <td><%= team.rpa %></td>
                <td><%= team.category %></td>
                <td><%= link_to 'Ver', team %></td>
                <td><%= link_to 'Editar', edit_team_path(team) %></td>
                <td><%= link_to 'Excluir', team, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>

