<div class="container-fluid">
  <!-- START DATATABLE 1 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Partidas
        </div>
        <div class="panel-body">
          <table id="datatable1" class="table table-striped table-hover">
            <thead>
    <tr>
      <th>Quando</th>
      <th>Time 1</th>
      <th>Time 2</th>
      <th>Campo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.when %></td>
        <td><%= match.team %></td>
        <td><%= match.challenger %></td>
        <td><%= match.where %></td>
        <td><%= link_to 'Ver', match %></td>
        <td><%= link_to 'Editar', edit_match_path(match) %></td>
        <td><%= link_to 'Excluir', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<%= link_to 'Nova partida', new_match_path %>
