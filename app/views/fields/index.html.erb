<div class="container-fluid">
  <!-- START DATATABLE 1 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Campos
        </div>
        <div class="panel-body">
          <table id="datatable1" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Endere√ßo</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @fields.each do |field| %>
              <tr>
                <td><%= field.name %></td>
                <td><%= field.addres %></td>
                <td><%= link_to 'Ver', field %></td>
                <td><%= link_to 'Editar', edit_field_path(field) %></td>
                <td><%= link_to 'Excluir', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>
